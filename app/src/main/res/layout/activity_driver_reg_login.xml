<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DriverRegLoginActivity">


    <EditText
        android:id="@+id/driverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/status_driver"
        android:hint="example@gmail.com"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="159dp" />

    <EditText
        android:id="@+id/driverPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/driverEmail"
        android:inputType="textPassword"
        android:hint="Пароль"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/signIn_driver"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:layout_below="@id/driverPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textStyle="italic"
         />

    <Button
        android:id="@+id/signUp_driver"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:layout_below="@id/signIn_driver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/status_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход для водителей"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/accountCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Еще нет аккаунта?"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/signIn_driver"
        />
</RelativeLayout>